{
  "manifest_version": 2,

  "name": "Tab Pet",
  "description": "Raise and interact with a virtual pet in a new tab.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides": {
		"newtab": "index.html"
	},
  "permissions": [
    "storage"
  ]
}